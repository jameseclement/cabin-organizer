<%= form_for @kid do |f| %>

<%= f.label :first_name, "First Name:" %>
<%= f.text_field :first_name %><br><br>
<%= f.label :last_name, "Last Name:" %>
<%= f.text_field :last_name %><br><br>
<%= f.label :gender %>
<%= f.select :gender, ["Male", "Female"] %><br><br>
<%= f.label :year, "Camp Year" %>
<%= f.number_field :year %><br><br>
<%= f.label :sport, "Favorite Sport" %>
<%= f.text_field :sport %><br><br>
<%= f.label :emergency_contact, "Emergency Contact" %>
<%= f.text_field :emergency_contact %><br><br>
<%= f.label :cabin, "Cabin" %>
<%= f.collection_select :cabin_id, Cabin.all, :id, :name%><br><br>
<%= f.submit %>
<% end %>
